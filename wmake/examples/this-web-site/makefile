# Start continuous build
.PHONY: server
server: 
	 @touch ./.client-changed
	 @touch ./.recompile-all
	 echo '' > ./.watches.pid
	 @watchman -w ./examples 'touch ./.client-changed' & echo "$$!" >> "./.watches.pid" 
	 @watchman -w ./docs 'touch ./.client-changed' & echo "$$!" >> "./.watches.pid" 
	 @watchman -w ./assets 'touch ./.client-changed' & echo "$$!" >> "./.watches.pid" 
	 @watchman -w js/render.ls 'touch ./.client-changed' & echo "$$!" >> "./.watches.pid" 
	 @watchman -w ./js 'touch ./.client-changed' & echo "$$!" >> "./.watches.pid" 
	 @watchman -w ./.client-changed 'make deploy; chromereload;' & echo "$$!" >> "./.watches.pid" 
	 @watchman -w ./.recompile-all 'make clean && make deploy; chromereload;' & echo "$$!" >> "./.watches.pid" 
	 @pushserve -P ./deploy/static & echo "$$!" >> "./.watches.pid"
	 @watchman -w ./assets/components/bootstrap/less 'touch ./.recompile-all' & echo "$$!" >> "./.watches.pid" 
	 @watchman -w ./assets/views/default.jade 'touch ./.recompile-all' & echo "$$!" >> "./.watches.pid" 
	 @watchman -w ./assets/css/final-touches.less 'touch ./.recompile-all' & echo "$$!" >> "./.watches.pid" 

# Stops the continuous build
.PHONY: reverse
reverse: 
	 cat ./.watches.pid | xargs -n 1 kill -9

# Tests server files
.PHONY: test
test: 

# Converting from tty to tty.json
./build/%.tty.json: %.tty
	 perl -Itools/jsttyplay-master tools/jsttyplay-master/preprocess.pl $< $@

# Converting from md to md
./build/%.md: %.md
	 cp $< $@

# Converting from ls to js
./build/%.js: %.ls
	 lsc --output $(BUILD_DIR) -c $<

# Converting from coffee to js
./build/%.js: %.coffee
	 coffee -b -l --output $(BUILD_DIR) $<

# Converting from jade to html
./build/%.html: %.jade
	 @jade -P --out $(BUILD_DIR) $<

# Converting from styl to css
./build/%.css: %.styl
	 stylus $< -o $(BUILD_DIR)

# Converting from less to css
./build/%.css: %.less
	 lessc --verbose $< > $@

# Converting from js to min.js
./build/%.min.js: ./build/%.js
	 uglifyjs      $< > $@

# Converting from css to min.css
./build/%.min.css: ./build/%.css
	 uglifycss     $< > $@

# Converting from js to js
./build/%.js: %.js
	 cp $< $@

# Converting from css to css
./build/%.css: %.css
	 cp $< $@

# Converting from svg to svg
./build/%.svg: %.svg
	 cp $< $@
