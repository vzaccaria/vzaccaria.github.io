# Create temporary directories
.PHONY: pre-build
pre-build: 
	 @mkdir -p ./build

# Create deploy directories
.PHONY: pre-deploy
pre-deploy: 
	 @mkdir -p ./deploy
	 @mkdir -p ./deploy/static
	 @mkdir -p ./deploy/static/js
	 @mkdir -p ./deploy/static/css
	 @mkdir -p ./deploy/static/img
	 @mkdir -p ./deploy/static/html
	 @mkdir -p ./deploy/static/markdown

# Deploy files
.PHONY: _deploy
_deploy: 
	 @for i in $(CLIENT_HTML); do \
		 install -m 555 $$i ./deploy/static/html; \
	 done 
	 install -m 555 ./build/client.js ./deploy/static/js
	 install -m 555 ./build/client.css ./deploy/static/css
	 install -m 555 ./build/vendor.js ./deploy/static/js
	 install -m 555 ./build/client.min.js ./deploy/static/js
	 install -m 555 ./build/vendor.min.js ./deploy/static/js
	 @for i in $(shell find ./assets/img/backgrounds -name '*.png'); do \
		 install -m 555 $$i ./deploy/static/img; \
	 done 
	 @for i in $(shell find ./assets/img/my-icons -name '*.png'); do \
		 install -m 555 $$i ./deploy/static/img; \
	 done 
	 @for i in $(shell find ./assets/img/carousel -name '*.jpg'); do \
		 install -m 555 $$i ./deploy/static/img; \
	 done 
	 @for i in $(shell find ./assets/img/carousel -name '*.png'); do \
		 install -m 555 $$i ./deploy/static/img; \
	 done 
	 install -m 555 $(strip $(patsubst %, ./build/%, $(patsubst %.jade, %.html, $(notdir ./assets/views/index.jade)))) ./deploy/static
	 install -m 555 $(strip $(patsubst %, ./build/%, $(patsubst %.jade, %.html, $(notdir ./assets/views/examples.jade)))) ./deploy/static
	 mkdir -p ./deploy/static/termcasts
	 cp ./build/*.tty.json ./deploy/static/termcasts
	 cp -R ./examples/* ./deploy/static/examples
	 mkdir -p ./deploy/static/markdown
	 cp ./build/*.md ./deploy/static/markdown
	 @echo ' [34mâ””â”€(deployed.[0m' 1>&2
	 @echo ' [34m[0m' 1>&2

# Post deploy files
.PHONY: post-deploy
post-deploy: 
	 @echo ' [34mâ””â”€(post deploy done.[0m' 1>&2
	 @echo ' [34m[0m' 1>&2

# Build completed
.PHONY: _build
_build:  $(OTHER) $(CLIENT_HTML) ./build/client.css ./build/client.js ./build/vendor.js ./build/client.min.js ./build/vendor.min.js
	 @echo ' [34mâ””â”€(build completed.[0m' 1>&2
	 @echo ' [34m[0m' 1>&2

# Runs task deploy
.PHONY: deploy
deploy: 
	 @make pre-deploy
	 @make build
	 @make _deploy
	 @make post-deploy


# Runs task build
.PHONY: build
build: 
	 @make pre-build
	 @make _build


